{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@ui/*": ["packages/ui/src/*"],
      "@lib/*": ["packages/lib/src/*"],
      "@types/*": ["packages/types/src/*"],
      "@sanity/*": ["packages/sanity/src/*"]
    }
  }
}